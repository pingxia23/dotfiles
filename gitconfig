[alias]
	repush = "!f() { \\\n  git add --all; \\\n  git commit --amend --no-edit; \\\n  git push origin $(git symbolic-ref --short HEAD) \"$@\"; \\\n}; f"
[push]
	autoSetupRemote = true
	default = current
[pager]
	branch = false
[url "git@github.com:"]
	insteadOf = https://github.com/
	insteadOf = git://github.com/
[diff]
	tool = vimdiff
[difftool "vimdiff"]
	cmd = vimdiff $LOCAL $REMOTE
[merge]
	tool = vimdiff
[mergetool "vimdiff"]
	cmd = vimdiff $MERGED
	trustExitCode = true
[fetch]
	parallel = 8
	prune = false
[pull]
	ff = only
[advice]
	detachedHead = false
